.calendar__wrapper
  display flex
  align-items center
  width 100%
  font-family 'Montserrat', sans-serif
  font-size 14px

.calendar__wrapper > .calendar__container
  position relative
  display flex
  justify-content center
  width 588px
  height 621px
  background-color #f5f5f5
  border-radius 18px

.calendar__wrapper > .calendar__container > .inside__container
  position absolute
  display flex
  flex-direction column
  align-items center
  justify-content flex-end
  bottom 48px
  height 515px
  -webkit-user-select none
  -moz-user-select none
  -ms-user-select none
  user-select none
